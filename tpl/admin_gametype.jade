doctype html
html(ng-app)
	head
		title Test page
		link(rel='stylesheet', href='/css/bootstrap.min.css')
	body
		div(ng-controller='AppCtrl', class="col-md-12" )
			H1 Test page

			div(id='phase_input' class="col-md-12" class="panel panel-default")

				p
				form(ng-submit="sendQuestion()")
					div(class='form-horizontal')

						div(class='form-group')
							label(for='maxPoints' class="col-sm-2 control-label") Max points:
							div(class="col-sm-8")
								input(id='maxPoints' class='form-control' type='text', size='60' ng-model='questionTitle' placeholder='enter max points here')

						div(class='form-group')
							label(for='maxRounds' class="col-sm-2 control-label") Max rounds:
							div(class="col-sm-8")
								input(id='maxRounds' class='form-control' type='text', size='60' ng-model='question' placeholder='enter max rounds here')
								p.
						p.
						input(type='submit', class='btn btn-default' value='Register')


			div(class="col-md-2")
			table
				thead
				tr
					th Question name
					th Question
					th Answer
					tbody
						each item in results_from_mongo
							tr
								td= item.question.questionTitle
								td= item.question.question
								td= item.question.answer

				p (c) Matthew Burling 2017

				script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js')
				script(src='/socket.io/socket.io.js')
				script(src='/js/app.js')
				script(src='/services.js')
				script(src='/js/filters.js')
				script(src='/js/directives.js')
				script(src='/test.js')
