doctype html
html(ng-app)
    head
        title QuizMaster ~ Question entry
        link(rel='stylesheet', href='/css/bootstrap.min.css')
    body
        div(ng-controller='AppCtrl', class="col-md-12" )
            H1 Add question

            div(id='phase_input' class="col-md-12" class="panel panel-default")

                p
                form(ng-submit="sendQuestion()")
                    div(class='form-horizontal')

                        div(class='form-group')
                            label(for='questionTitle' class="col-sm-2 control-label") Question Tag:
                            div(class="col-sm-8")
                                input(id='questionTitle' class='form-control' type='text', size='60' ng-model='questionTitle' placeholder='enter question tag here')

                        div(class='form-group')
                            label(for='questionName' class="col-sm-2 control-label") Question:
                            div(class="col-sm-8")
                                input(id='questionName' class='form-control' type='text', size='60' ng-model='question' placeholder='enter question here')

                        div(class='form-group')
                            label(for='questionAnswer' class="col-sm-2 control-label") Question Answer:
                            div(class="col-sm-8")
                                input(id='questionAnswer' class='form-control' type='text', size='60' ng-model='answer' placeholder='enter question answer here')

                        div(class='form-group')
                            label(for='scoreweight' class="col-sm-2 control-label") Score weight:
                            div(class="col-sm-8")
                                input(id='scoreweight' class='form-control' type='text', size='60' ng-model='scoreweight' placeholder='enter score weight here')
                        p.
                        div(class='form-group')
                            label(for='questiontype' class="col-sm-2 control-label") Question type:
                            div(class="col-sm-8")
                                input(id='questiontype' class='form-control' type='text', size='60' ng-model='questiontype' placeholder='enter question type here')
                        p.
                        input(type='submit', class='btn btn-default' value='Register')



            div(class="col-md-2")
            table
                thead
                tr
                    th Question Tag
                    th Question
                    th Answer
                    th Scoreweight
                    th Question Type
                    tbody
                        each item in results_from_mongo
                            tr
                                td= item.question.questionTitle
                                td= item.question.question
                                td= item.question.answer
                                td= item.question.scoreweight
                                td= item.question.questiontype

                p (c) Matthew Burling 2017

                script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js')
                script(src='/socket.io/socket.io.js')
                script(src='/js/app.js')
                script(src='/services.js')
                script(src='/js/filters.js')
                script(src='/js/directives.js')
                script(src='/admin_question.js')
